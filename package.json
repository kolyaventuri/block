{
  "name": "block",
  "version": "0.0.1",
  "description": "React-based Slack message renderer",
  "main": "lib/index.js",
  "scripts": {
    "test": "xo && ava",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolyaventuri/block.git"
  },
  "keywords": [
    "react",
    "slack",
    "message",
    "bot"
  ],
  "author": "Kolya Venturi <me@kolya.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kolyaventuri/block/issues"
  },
  "homepage": "https://github.com/kolyaventuri/block#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "ava": "^2.4.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.7.1",
    "eslint-config-xo": "^0.27.2",
    "eslint-config-xo-react": "^0.20.0",
    "eslint-plugin-react": "^7.16.0",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2",
    "xo": "^0.25.3"
  },
  "pre-commit": [
    "lint"
  ],
  "xo": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "xo-react/space"
    ],
    "space": true,
    "compilerOptions": {
      "strict": true
    },
    "rules": {
      "react/jsx-fragments": [
        true,
        "element"
      ],
      "@typescript-eslint/member-naming": [
        "error",
        {
          "private": "^__",
          "protected": "^_"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "16.5"
      }
    },
    "env": [
      "node"
    ]
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "test/**/*.test.ts"
    ],
    "helpers": [
      "test/helpers/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
